{
  "description": "Skill Evolver â€” analytics hooks for skill usage tracking",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/on-prompt-submit.mjs",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/on-stop.mjs",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "ConfigChange": [
      {
        "matcher": "skills",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/on-config-change.mjs",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ]
  }
}
